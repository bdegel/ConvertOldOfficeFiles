<Window x:Class="ConvertOldOfficeFiles.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvertOldOfficeFiles.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="btCheck" Height="24" Header="Check" Click="btCheck_Click"></MenuItem>
            <MenuItem Header="Convert" Height="24" Click="btConvert_Click"></MenuItem>
        </Menu>
        
        <StatusBar DockPanel.Dock="Bottom">
            <Label x:Name="statusLabel" Content="Label" Padding="0" RenderTransformOrigin="0.5,0.5"/>
        </StatusBar>
        
        <TextBox x:Name="tbOutput" TextWrapping="Wrap" DockPanel.Dock="Top"/>

    </DockPanel>
</Window>
